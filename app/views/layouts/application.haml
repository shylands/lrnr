!!!
%html
  %head
    %title LRNR
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    %script{:src => "//use.typekit.net/oge2mkq.js", :type => "text/javascript"}
    :javascript
      try{Typekit.load();}catch(e){}
    = csrf_meta_tags
  %body
    .navbar.navbar-static-top.navbar-inverse
      .navbar-inner
        .container


          %a.brand{:href => posts_path}
            LRNR
            %span Learn. Do. Grow
          %ul.pull-right.nav
            - if current_user
              %li
                = link_to image_tag(avatar_url(current_user)), user_profile_path(current_user.username)
              %li
                = link_to 'Add a new post', new_post_path
              %li
                = link_to 'Sign out', destroy_user_session_path, :method => :delete
            - else
              %li
                = link_to 'Sign up', new_user_registration_path
              %li
                = link_to 'Sign in', new_user_session_path

    .search-bar
      .container
        .row-fluid
          %input{"data-provide" => "typeahead", :type => "text"}/

    .container
      .row-fluid

        = yield

    %footer
      .container
        .row-fluid
          %h6
            %a{:href => "#"}
            LRNR

