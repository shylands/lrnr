.row-fluid
  .container
    .about-strapline
      %h1.strapline
        %strong
          Lrnr
        helps you take the initiative and learn what you really want to.
        = link_to  "Find out how", "/about"
     
.row-fluid
  .container
    .span8
      %h1.beta
        Popular this week

      .posts.content-list
        - @posts.each do |post|
          = render post

    .span4
      %h1.beta
        Topics
      .well.white
      - @tags.each do |tag|
        = link_to tag.name, tag_path(tag.name), :class => "content-card-tag"

