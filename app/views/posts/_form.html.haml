= simple_form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.input :title, :label => "Content Title"
  .field
    = f.input :url, :label => "Content URL"
  .field
    %label.checkbox
      = f.input :original, :as => :boolean, :label => false, :boolean_style => :inline
      Did you create this content?
  .field
    %label.checkbox
      = f.input :agreement, :as => :boolean, :label => false, :boolean_style => :inline
      By ticking this you agree to not post any content that canâ€™t be learnt from or things of a foul, naughty or offensive nature!


  .actions
    = f.submit 'Submit'
