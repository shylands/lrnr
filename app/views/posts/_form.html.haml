= simple_form_for @post, :html => {:class => 'form-horizontal' }, :url => topic_posts_path(@topic) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.input :title
  .field
    = f.input :url
  .actions
    = f.submit 'Save'
