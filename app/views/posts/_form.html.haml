= simple_form_for @post, :html => {:class => 'form-horizontal' } do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.input :title
  .field
    = f.input :url
  .field
    = f.input :original, :as => :boolean
  .field
    = f.input :agreement, :as => :boolean, :label => ""
    %p iuhoug


  .actions
    = f.submit 'Submit'
